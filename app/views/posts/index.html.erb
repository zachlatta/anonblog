<% if @posts.empty? %>
  <p>No posts yet! Why not <%= link_to 'create one', new_post_path %>?</p>
<% else %>
  <table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% end %>
